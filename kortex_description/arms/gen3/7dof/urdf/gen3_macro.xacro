<?xml version="1.0"?>

<robot name="gen3_arm" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Propagate last link name information because it is the gripper's parent link -->
  <xacro:property name="last_arm_link" value="end_effector_link"/>
  <xacro:property name="PI" value="3.1415926535897931"/>

  <xacro:macro name="load_arm" params="
    parent
    dof
    vision
    prefix
    *origin
    robot_ip
    username:=admin
    password:=admin
    port:=10000
    port_realtime:=10001
    session_inactivity_timeout_ms:=6000
    connection_inactivity_timeout_ms:=2000
    use_internal_bus_gripper_comm:=true
    gripper_joint_name
    gripper_max_velocity:=100.0
    gripper_max_force:=100.0
    use_fake_hardware:=false
    fake_sensor_commands:=false
    sim_gazebo:=false
    sim_ignition:=false
    sim_isaac:=false
    use_kortex_control:=false
    isaac_joint_commands:=/isaac_joint_commands
    isaac_joint_states:=/isaac_joint_states
    use_external_cable:=false
    initial_positions:=${dict(joint_1=0.0,joint_2=0.0,joint_3=0.0,joint_4=0.0,joint_5=0.0,joint_6=0.0,joint_7=0.0)}
    architectural_calibrations:=${
    dict(
      joint_1=dict(x=0, y=0, z=0, roll=0, pitch=0, yaw=0),
      joint_2=dict(x=0, y=0, z=0, roll=0, pitch=0, yaw=0),
      joint_3=dict(x=0, y=0, z=0, roll=0, pitch=0, yaw=0),
      joint_4=dict(x=0, y=0, z=0, roll=0, pitch=0, yaw=0),
      joint_5=dict(x=0, y=0, z=0, roll=0, pitch=0, yaw=0),
      joint_6=dict(x=0, y=0, z=0, roll=0, pitch=0, yaw=0),
      joint_7=dict(x=0, y=0, z=0, roll=0, pitch=0, yaw=0)
    )}" >

    <xacro:if value="${use_kortex_control}">
      <!-- ros2 control include -->
      <xacro:include filename="$(find kortex_description)/arms/gen3/${dof}dof/urdf/kortex.ros2_control.xacro" />
      <xacro:kortex_ros2_control
        name="${prefix}KortexMultiInterfaceHardware" prefix="${prefix}"
        use_fake_hardware="${use_fake_hardware}"
        use_kortex_control="${use_kortex_control}"
        fake_sensor_commands="${fake_sensor_commands}"
        sim_gazebo="${sim_gazebo}"
        sim_ignition="${sim_ignition}"
        sim_isaac="${sim_isaac}"
        isaac_joint_commands="${isaac_joint_commands}"
        isaac_joint_states="${isaac_joint_states}"
        tf_prefix=""
        initial_positions="${initial_positions}"
        robot_ip="${robot_ip}"
        username="${username}"
        password="${password}"
        port="${port}"
        port_realtime="${port_realtime}"
        session_inactivity_timeout_ms="${session_inactivity_timeout_ms}"
        connection_inactivity_timeout_ms="${connection_inactivity_timeout_ms}"
        use_internal_bus_gripper_comm="${use_internal_bus_gripper_comm}"
        gripper_max_velocity="${gripper_max_velocity}"
        gripper_max_force="${gripper_max_force}"
        gripper_joint_name="${gripper_joint_name}"/>
    </xacro:if>

    <joint name="base_joint${prefix}" type="fixed">
      <xacro:insert_block name="origin" />
      <parent link="${parent}"/>
      <child link="base_link${prefix}" />
    </joint>
    <link name="base_link${prefix}">
      <inertial>
        <origin xyz="-0.000648 -0.000166 0.084487" rpy="0 0 0" />
        <mass value="1.697" />
        <inertia ixx="0.004622" ixy="9E-06" ixz="6E-05" iyy="0.004495" iyz="9E-06" izz="0.002079" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/base_link.dae" />
        </geometry>
        <material name="">
          <color rgba="0.75294 0.75294 0.75294 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/base_link.dae" />
        </geometry>
      </collision>
    </link>
    <link name="shoulder_link${prefix}">
      <inertial>
        <origin xyz="-2.3E-05 -0.010364 -0.07336" rpy="0 0 0" />
        <mass value="1.3773" />
        <inertia ixx="0.00457" ixy="1E-06" ixz="2E-06" iyy="0.004831" iyz="0.000448" izz="0.001409" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/shoulder_link.dae" />
        </geometry>
        <material name="">
          <color rgba="0.75294 0.75294 0.75294 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/shoulder_link.dae" />
        </geometry>
      </collision>
    </link>
    <xacro:if value="${use_external_cable}">
      <joint
      name="joint_1${prefix}"
      type="revolute">
        <origin
          xyz="${architectural_calibrations['joint_1']['x']} ${architectural_calibrations['joint_1']['y']} ${architectural_calibrations['joint_1']['z'] + 0.15643}"
          rpy="${architectural_calibrations['joint_1']['roll'] + PI} ${architectural_calibrations['joint_1']['pitch']} ${architectural_calibrations['joint_1']['yaw']}" />
        <parent
          link="base_link${prefix}" />
        <child
          link="shoulder_link${prefix}" />
        <axis
          xyz="0 0 1" />
        <limit
          lower="${-2*PI}"
          upper="${2*PI}"
          effort="39"
          velocity="1.3963" />
      </joint>
    </xacro:if>
    <xacro:unless value="${use_external_cable}">
      <joint
        name="joint_1${prefix}"
        type="continuous">
        <origin xyz="${architectural_calibrations['joint_1']['x']} ${architectural_calibrations['joint_1']['y']} ${architectural_calibrations['joint_1']['z'] + 0.15643}"
          rpy="${architectural_calibrations['joint_1']['roll'] + PI} ${architectural_calibrations['joint_1']['pitch']} ${architectural_calibrations['joint_1']['yaw']}" />
        <parent
          link="base_link${prefix}" />
        <child
          link="shoulder_link${prefix}" />
        <axis
          xyz="0 0 1" />
        <limit
          effort="39"
          velocity="1.3963" />
      </joint>
    </xacro:unless>
    <link name="half_arm_1_link${prefix}">
      <inertial>
        <origin xyz="-4.4E-05 -0.09958 -0.013278" rpy="0 0 0" />
        <mass value="1.1636" />
        <inertia ixx="0.011088" ixy="5E-06" ixz="0" iyy="0.001072" iyz="-0.000691" izz="0.011255" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/half_arm_1_link.dae" />
        </geometry>
        <material name="">
          <color rgba="0.75294 0.75294 0.75294 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/half_arm_1_link.dae" />
        </geometry>
      </collision>
    </link>
    <joint
      name="joint_2${prefix}"
      type="revolute">
      <origin
        xyz="${architectural_calibrations['joint_2']['x']} ${architectural_calibrations['joint_2']['y'] + 0.005375} ${architectural_calibrations['joint_2']['z'] - 0.12838}"
        rpy="${architectural_calibrations['joint_2']['roll'] + PI/2} ${architectural_calibrations['joint_2']['pitch']} ${architectural_calibrations['joint_2']['yaw']}" />
      <parent
        link="shoulder_link${prefix}" />
      <child
        link="half_arm_1_link${prefix}" />
      <axis
        xyz="0 0 1" />
      <limit lower="-2.24" upper="2.24" effort="39" velocity="1.3963" />
    </joint>
    <link name="half_arm_2_link${prefix}">
      <inertial>
        <origin xyz="-4.4E-05 -0.006641 -0.117892" rpy="0 0 0" />
        <mass value="1.1636" />
        <inertia ixx="0.010932" ixy="0" ixz="-7E-06" iyy="0.011127" iyz="0.000606" izz="0.001043" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/half_arm_2_link.dae" />
        </geometry>
        <material name="">
          <color rgba="0.75294 0.75294 0.75294 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/half_arm_2_link.dae" />
        </geometry>
      </collision>
    </link>
    <xacro:if value="${use_external_cable}">
      <joint
        name="joint_3${prefix}"
        type="revolute">
        <origin 
          xyz="${architectural_calibrations['joint_3']['x']} ${architectural_calibrations['joint_3']['y'] - 0.21038} ${architectural_calibrations['joint_3']['z'] - 0.006375}"
          rpy="${architectural_calibrations['joint_3']['roll'] -PI/2} ${architectural_calibrations['joint_3']['pitch']} ${architectural_calibrations['joint_3']['yaw']}" />
        <parent
          link="half_arm_1_link${prefix}" />
        <child
          link="half_arm_2_link${prefix}" />
        <axis
          xyz="0 0 1" />
        <limit
          lower="${-2*PI}"
          upper="${2*PI}"
          effort="39"
          velocity="1.3963" />
      </joint>
    </xacro:if>
    <xacro:unless value="${use_external_cable}">
      <joint
        name="joint_3${prefix}"
        type="continuous">
        <origin 
          xyz="${architectural_calibrations['joint_3']['x']} ${architectural_calibrations['joint_3']['y'] - 0.21038} ${architectural_calibrations['joint_3']['z'] - 0.006375}"
          rpy="${architectural_calibrations['joint_3']['roll'] - PI/2} ${architectural_calibrations['joint_3']['pitch']} ${architectural_calibrations['joint_3']['yaw']}" />
        <parent
          link="half_arm_1_link${prefix}" />
        <child
          link="half_arm_2_link${prefix}" />
        <axis
          xyz="0 0 1" />
        <limit
          effort="39"
          velocity="1.3963" />
      </joint>
    </xacro:unless>
    <link name="forearm_link${prefix}">
      <inertial>
        <origin xyz="-1.8E-05 -0.075478 -0.015006" rpy="0 0 0" />
        <mass value="0.9302" />
        <inertia ixx="0.008147" ixy="-1E-06" ixz="0" iyy="0.000631" iyz="-0.0005" izz="0.008316" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/forearm_link.dae" />
        </geometry>
        <material name="">
          <color rgba="0.75294 0.75294 0.75294 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/forearm_link.dae" />
        </geometry>
      </collision>
    </link>
    <joint
      name="joint_4${prefix}"
      type="revolute">
      <origin 
        xyz="${architectural_calibrations['joint_4']['x']} ${architectural_calibrations['joint_4']['y'] + 0.006375} ${architectural_calibrations['joint_4']['z'] - 0.21038}"
        rpy="${architectural_calibrations['joint_4']['roll'] + PI/2} ${architectural_calibrations['joint_4']['pitch']} ${architectural_calibrations['joint_4']['yaw']}" />
      <parent
        link="half_arm_2_link${prefix}" />
      <child
        link="forearm_link${prefix}" />
      <axis
        xyz="0 0 1" />
      <limit lower="-2.57" upper="2.57" effort="39" velocity="1.3963" />
    </joint>
    <link name="spherical_wrist_1_link${prefix}">
      <inertial>
        <origin xyz="1E-06 -0.009432 -0.063883" rpy="0 0 0" />
        <mass value="0.6781" />
        <inertia ixx="0.001596" ixy="0" ixz="0" iyy="0.001607" iyz="0.000256" izz="0.000399" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/spherical_wrist_1_link.dae" />
        </geometry>
        <material name="">
          <color rgba="0.75294 0.75294 0.75294 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/spherical_wrist_1_link.dae" />
        </geometry>
      </collision>
    </link>
    <xacro:if value="${use_external_cable}">
      <joint
        name="joint_5${prefix}"
        type="revolute">
        <origin 
          xyz="${architectural_calibrations['joint_5']['x']} ${architectural_calibrations['joint_5']['y'] - 0.20843} ${architectural_calibrations['joint_5']['z'] - 0.006375}"
          rpy="${architectural_calibrations['joint_5']['roll'] - PI/2} ${architectural_calibrations['joint_5']['pitch']} ${architectural_calibrations['joint_5']['yaw']}" />
        <parent
          link="forearm_link${prefix}" />
        <child
          link="spherical_wrist_1_link${prefix}" />
        <axis
          xyz="0 0 1" />
        <limit
          lower="${-2*PI}"
          upper="${2*PI}"
          effort="9"
          velocity="1.2218" />
      </joint>
    </xacro:if>
    <xacro:unless value="${use_external_cable}">
      <joint
        name="joint_5${prefix}"
        type="continuous">
        <origin 
          xyz="${architectural_calibrations['joint_5']['x']} ${architectural_calibrations['joint_5']['y'] - 0.20843} ${architectural_calibrations['joint_5']['z'] - 0.006375}"
          rpy="${architectural_calibrations['joint_5']['roll'] - PI/2} ${architectural_calibrations['joint_5']['pitch']} ${architectural_calibrations['joint_5']['yaw']}" />
        <parent
          link="forearm_link${prefix}" />
        <child
          link="spherical_wrist_1_link${prefix}" />
        <axis
          xyz="0 0 1" />
        <limit
          effort="9"
          velocity="1.2218" />
      </joint>
    </xacro:unless>
    <link name="spherical_wrist_2_link${prefix}">
      <inertial>
        <origin xyz="1E-06 -0.045483 -0.00965" rpy="0 0 0" />
        <mass value="0.6781" />
        <inertia ixx="0.001641" ixy="0" ixz="0" iyy="0.00041" iyz="-0.000278" izz="0.001641" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/spherical_wrist_2_link.dae" />
        </geometry>
        <material name="">
          <color rgba="0.75294 0.75294 0.75294 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/spherical_wrist_2_link.dae" />
        </geometry>
      </collision>
    </link>
    <joint
      name="joint_6${prefix}"
      type="revolute">
      <origin 
        xyz="${architectural_calibrations['joint_6']['x']} ${architectural_calibrations['joint_6']['y'] + 0.00017505} ${architectural_calibrations['joint_6']['z'] - 0.10593}"
        rpy="${architectural_calibrations['joint_6']['roll'] + PI/2} ${architectural_calibrations['joint_6']['pitch']} ${architectural_calibrations['joint_6']['yaw']}" />
      <parent
        link="spherical_wrist_1_link${prefix}" />
      <child
        link="spherical_wrist_2_link${prefix}" />
      <axis
        xyz="0 0 1" />
      <limit lower="-2.09" upper="2.09" effort="9" velocity="1.2218" />
    </joint>
    <xacro:if value="${vision}">
    <link name="bracelet_link${prefix}">
      <inertial>
        <origin xyz="0.000281 0.011402 -0.029798" rpy="0 0 0" />
        <mass value="0.5" />
        <inertia ixx="0.000587" ixy="3E-06" ixz="3E-06" iyy="0.000369" iyz="-0.000118" izz="0.000609" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/bracelet_with_vision_link.dae" />
        </geometry>
        <material name="">
          <color rgba="0.75294 0.75294 0.75294 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/bracelet_with_vision_link.dae" />
        </geometry>
      </collision>
    </link>
    </xacro:if>
    <xacro:unless value="${vision}">
    <link name="bracelet_link${prefix}">
      <inertial>
        <origin xyz="-9.3E-05 0.000132 -0.022905" rpy="0 0 0" />
        <mass value="0.364" />
        <inertia ixx="0.000214" ixy="0" ixz="1E-06" iyy="0.000223" iyz="-2E-06" izz="0.00024" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/bracelet_no_vision_link.dae" />
        </geometry>
        <material name="">
          <color rgba="0.75294 0.75294 0.75294 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find kortex_description)/arms/gen3/${dof}dof/meshes/bracelet_no_vision_link.dae" />
        </geometry>
      </collision>
    </link>
    </xacro:unless>
    <xacro:if value="${use_external_cable}">
      <joint
        name="joint_7${prefix}"
        type="revolute">
        <origin 
          xyz="${architectural_calibrations['joint_7']['x']} ${architectural_calibrations['joint_7']['y'] - 0.10593} ${architectural_calibrations['joint_7']['z'] - 0.00017505}"
          rpy="${architectural_calibrations['joint_7']['roll'] - PI/2} ${architectural_calibrations['joint_7']['pitch']} ${architectural_calibrations['joint_7']['yaw']}" />
        <parent
          link="spherical_wrist_2_link${prefix}" />
        <child
          link="bracelet_link${prefix}" />
        <axis
          xyz="0 0 1" />
        <limit
          lower="${-2*PI}"
          upper="${2*PI}"
          effort="9"
          velocity="1.2218" />
      </joint>
    </xacro:if>
    <xacro:unless value="${use_external_cable}">
      <joint
        name="joint_7${prefix}"
        type="continuous">
        <origin 
          xyz="${architectural_calibrations['joint_7']['x']} ${architectural_calibrations['joint_7']['y'] - 0.10593} ${architectural_calibrations['joint_7']['z'] - 0.00017505}"
          rpy="${architectural_calibrations['joint_7']['roll'] - PI/2} ${architectural_calibrations['joint_7']['pitch']} ${architectural_calibrations['joint_7']['yaw']}" />
        <parent
          link="spherical_wrist_2_link${prefix}" />
        <child
          link="bracelet_link${prefix}" />
        <axis
          xyz="0 0 1" />
        <limit
          effort="9"
          velocity="1.2218" />
      </joint>
    </xacro:unless>
    <link name="end_effector_link${prefix}" />
    <joint
      name="end_effector${prefix}"
      type="fixed">
      <origin xyz="0 0 -0.0615250000000001" rpy="3.14159265358979 1.09937075168372E-32 0" />
      <parent
        link="bracelet_link${prefix}" />
      <child
        link="end_effector_link${prefix}" />
      <axis
        xyz="0 0 0" />
    </joint>
    <xacro:if value="${vision}">
      <!-- sim camera needs to be rotated which might not apply to built in vision module -->
      <xacro:if value="${sim_ignition}">
        <link name="camera_link${prefix}" />
        <joint name="camera_module${prefix}" type="fixed">
          <origin xyz="0 0.05639 0.01305" rpy="0 ${-PI/2} ${-PI/2}" />
          <parent link="end_effector_link${prefix}" />
          <child  link="camera_link${prefix}" />
        </joint>
        <link name="camera_depth_frame${prefix}" />
        <joint name="depth_module${prefix}" type="fixed">
          <origin xyz="0.0275 0.066 0.01305" rpy="0 ${-PI/2} ${-PI/2}" />
          <parent link="end_effector_link${prefix}" />
          <child  link="camera_depth_frame${prefix}" />
        </joint>
        <link name="camera_color_frame${prefix}" />
        <joint name="color_module${prefix}" type="fixed">
          <origin xyz="0 0.05639 0.01305" rpy="0 ${-PI/2} ${-PI/2}" />
          <parent link="end_effector_link${prefix}" />
          <child  link="camera_color_frame${prefix}" />
        </joint>
      </xacro:if>
      <xacro:unless value="${sim_ignition}">
        <link name="camera_link${prefix}" />
        <joint name="camera_module${prefix}" type="fixed">
          <origin xyz="0 0.05639 -0.00305" rpy="${PI} ${PI} 0" />
          <parent link="end_effector_link${prefix}" />
          <child  link="camera_link${prefix}" />
        </joint>
        <link name="camera_depth_frame${prefix}" />
        <joint name="depth_module${prefix}" type="fixed">
          <origin xyz="0.0275 0.066 -0.00305" rpy="${PI} ${PI} 0" />
          <parent link="end_effector_link${prefix}" />
          <child  link="camera_depth_frame${prefix}" />
        </joint>
        <link name="camera_color_frame${prefix}" />
        <joint name="color_module${prefix}" type="fixed">
          <origin xyz="0 0.05639 -0.00305" rpy="${PI} ${PI} 0" />
          <parent link="end_effector_link${prefix}" />
          <child  link="camera_color_frame${prefix}" />
        </joint>
      </xacro:unless>
    </xacro:if>
  </xacro:macro>
</robot>
